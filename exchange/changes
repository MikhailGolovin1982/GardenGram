# .gitignore (если ещё не добавлял)
cat > .gitignore << 'EOF'
# Python / Django
__pycache__/
*.py[cod]
*.egg-info/
.venv/
.env
*.sqlite3
staticfiles/
media/

# Node / RN
node_modules/
.expo/
dist/
build/

# OS / IDE
.DS_Store
Thumbs.db
.vscode/
.idea/
EOF

# .gitattributes на будущее (нормализация переводов строк)
cat > .gitattributes << 'EOF'
* text=auto
*.sh text eol=lf
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.yml text eol=lf
EOF
