# 3️⃣ Личное сообщение продавцу
    if sender.id not in CONTACTED_USERS:
        try:
            private_text = (
                "Здравствуйте! Готов приобрести слот на Большой Иремель 27 км.\n"
                "Подскажите, пожалуйста, условия передачи."
            )
            await client.send_message(sender.id, private_text)
            CONTACTED_USERS.add(sender.id)
        except Exception as e:
            print(f"Не удалось написать в личку: {e}")
